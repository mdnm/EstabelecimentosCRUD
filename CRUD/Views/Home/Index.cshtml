@model IEnumerable<Estabelecimentos>
@{
    ViewData["Title"] = "Home Page";
}



<br />
<h3>Estabelecimentos</h3>

<hr />

<a asp-action="Create" class="btn btn-success mb-2">
    <i class="fa fa-plus"></i>
    Inserir
</a>

<form asp-action="Index" class="form-inline float-right">
    <input class="form-control mr-2" type="text" name="SearchString">
    <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
</form>

@if (Model.Count() > 0)
{
    <div class="border">
        <table class="table">
            <tr>
                <th>@Html.DisplayNameFor(m => m.RazaoSocial)</th>
                <th>@Html.DisplayNameFor(m => m.NomeFantasia)</th>
                <th>@Html.DisplayNameFor(m => m.CNPJ)</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.RazaoSocial)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.NomeFantasia)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.CNPJ)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success"><i class="fa fa-edit"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="fa fa-info-circle"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fa fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <div class="mt-5">
        Nenhum estabelecimento foi encontrado, por favor adicione algum.
    </div>
}
